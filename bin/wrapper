#!/bin/bash
export IDF_PATH=/home/lasse/git/esp-idf
cmd="/opt/esp/tools/xtensa-esp32-elf/esp-2020r3-8.4.0/xtensa-esp32-elf/bin/$(basename $0)"
docker run -it --rm --privileged -w $(pwd) --entrypoint "$cmd" -e IDF_PATH=$IDF_PATH -v /dev/ttyUSB0:/dev/ttyUSB0 -v /etc/passwd:/etc/passwd -v /etc/shadow:/etc/shadow -u 1000 -v $HOME:$HOME esp-idf "$@"
